<div class="card mb-4">
    <div class="card-header bg-light">
        <div class="row align-items-center g-2">
            <div class="col-auto">
                <img src="@AvatarUrl" class="rounded-circle" style="width: 80px; height: 80px" alt="Avatar" />
            </div>

            <div class="col">
                <h3 class="mb-0">@Username
                    @if (Member.ParticipateInRating)
                    {
                        <strong class="h5">&nbsp;(+@Member.RatingValue / +@Member.HistoricalRatingValue)</strong>
                    }
                    else
                    {
                        <Tooltip Title="Этот бастилец предпочитает не оценивать свой вклад бездушными цифрами">–</Tooltip>
                    }
                </h3>
                <CurrentStatusBadge Status="Member.CurrentStatus" />
                @if (IsPresident)
                {
                    <text>&nbsp;</text>
                    <span class="badge bg-warning text-dark">
                        <i class="bi bi-award me-1"></i>Председатель до @Member.PresidentUntil
                        </span>
                }
                <small class="text-muted"> [<a href="https://joinrpg.ru/user/@UserId">Профиль</a>]</small>
            </div>

        </div>
    </div>

    <div class="card-body">
       

