@{

    var startWeekDay = Start.ToString("dddd");
    var rangeWeekDay = Start.ToString("dddd") + "—" + End.ToString("dddd");
    if (Start.Month == End.Month && Start.Day == End.Day)
    {
        <Tooltip Title="@startWeekDay">
            @Start.ToString("d MMMM")
        </Tooltip>
    }
    else if (Start.Month == End.Month)
    {
        <Tooltip Title="@rangeWeekDay">
            <text>@Start.Day&#x2013;@End.ToString("d MMMM")</text>
        </Tooltip>
    }
    else if (Start.Year == End.Year)
    {
        <Tooltip Title="@rangeWeekDay">
            <text>@Start.ToString("d MMMM")&#x2013;@End.ToString("d MMMM")</text>
        </Tooltip>
    }
    else
    {
        <Tooltip Title="@rangeWeekDay">
            <text>@Start.ToShortDateString()&#x2013;@End.ToShortDateString()</text>
        </Tooltip>
    }
}

@code {
    [Parameter]
    [EditorRequired]
    public DateOnly Start { get; set; }

    [Parameter]
    [EditorRequired]
    public DateOnly End { get; set; }

}