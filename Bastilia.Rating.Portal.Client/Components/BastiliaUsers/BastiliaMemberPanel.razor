@using System.Globalization
@using Bastilia.Rating.Portal.Client.Components.Achievements
<BastiliaMemberCard Member="Member" />
@*
@if (Member.HisActiveProjects?.Any() == true)
    {
            <div class="mb-4">
                <h5 class="d-flex align-items-center">
                    <i class="bi bi-kanban me-2"></i>Администрирует проекты
                </h5>
        <div class="list-group">
            @foreach (var project in Member.HisActiveProjects.OrderByDescending(p => p.AddDate))
            {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-bold">@project.ProjectName</div>
                            </div>

                            @if (project.IsActive)
                                    {
                                <span class="badge bg-success">Активен</span>
                            }
                        </div>
            }
        </div>
            </div>
    }

    *@
<div>
    <h5 class="d-flex align-items-center">
        <i class="bi bi-trophy me-2"></i>Достижения
    </h5>

    @if (Member.Achievements.Any() == true)
    {
        <div style="display: flex; flex-flow: row wrap">
            @foreach (var achievement in Member.Achievements.OrderByDescending(a => a.Active).ThenByDescending(a => a.RatingValue).ThenByDescending(a => a.GrantedDate))
            {
                <AchievementCard Achievement="achievement" ShowValue=@Member.ParticipateInRating />
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-2 mb-0">
            Пока нет достижений
        </div>
    }
</div>


@code {
    [Parameter, EditorRequired]
    public BastiliaMember Member { get; set; } = null!;

    private string AvatarUrl => Member.AvatarUrl ?? "default-avatar.png";
    private string Username => Member.UserName;
    private int UserId => Member.JoinrpgUserId;
    private bool IsPresident => Member.IsPresident;
}